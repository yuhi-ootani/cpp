// ~/aaa/cpp_hub/.vscode/settings.json
{
  // すべてのファイルで「保存時に整形」を有効化
  "editor.formatOnSave": true,
  // C++ ファイルは ms-vscode.cpptools（C/C++ 拡張）の clang-format を使う
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  // C/C++ 拡張が呼び出す clang-format のパスを、ローカルのものへ差し替え
  "C_Cpp.clang_format_path": "${workspaceFolder}/node_modules/.bin/clang-format",
  // スタイルはファイル（.clang-format）に従う
  "C_Cpp.clang_format_style": "file",
  "files.saveConflictResolution": "overwriteFileOnDisk",
  "files.associations": {
    "iostream": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "cctype": "cpp",
